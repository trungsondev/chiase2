<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Tên môn học</th>
            <th scope="col">Tín chỉ LT</th>
            <th scope="col">Tín chỉ TH</th>
            <th scope="col">Khoa</th>
            <th scope="col">Loại</th>
            <th scope="col">
                <a style="width:100%" href="/MonHoc/Them" class="btn btn-primary btn-lg">THÊM</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < list.Rows.Count; i++)
        {
        <tr>
            <th scope="row">
                @{
                    var stt = i + 1;
                }
                @stt
            </th>
            <td>@list.Rows[i]["TenMonHoc"]</td>
            <td>@list.Rows[i]["TCLT"]</td>
            <td>@list.Rows[i]["TCTH"]</td>
            <td>@list.Rows[i]["TenKhoa"]</td>
            <td>@list.Rows[i]["TenTheLoai"]</td>
            <td>
                <a href="/MonHoc/Sua/@list.Rows[i]["MonHocId"]" class="btn btn-warning btn-md">Sửa</a>
                <a href="/MonHoc/Xoa/@list.Rows[i]["MonHocId"]" class="btn btn-danger btn-md">Xóa</a>
            </td>
        </tr>
        }

    </tbody>
</table>



